# infra/images/api/Containerfile
FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    libsndfile1 \
    ffmpeg \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

COPY backend/requirements.txt ./backend/requirements.txt
RUN pip install --upgrade pip && \
    pip install -r backend/requirements.txt

# Install Chatterbox without re-downloading PyTorch
RUN pip install --no-cache-dir --no-deps "chatterbox-tts @ git+https://github.com/devnen/chatterbox-v2.git@master"
RUN pip install --no-cache-dir \
    conformer>=0.3 \
    s3tokenizer \
    safetensors>=0.4 \
    transformers>=4.40 \
    diffusers>=0.27 \
    omegaconf \
    pyloudnorm

COPY backend/ ./backend/
COPY tts_engine/ ./tts_engine/

ENV PYTHONPATH=/app:/app/backend:/app/tts_engine:$PYTHONPATH

RUN useradd --create-home appuser && chown -R appuser:appuser /app
USER appuser

EXPOSE 8000

HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health/ || exit 1

CMD ["python", "backend/manage.py", "runserver", "0.0.0.0:8000"]